.sidebar {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  width: 0;
  overflow: hidden;
  pointer-events: none;
  transition: width 0.2s ease-in-out;
  z-index: 9;
}

#main-nav {
  z-index: 7;
}

.sidebar-content {
  width: 300px;
}

.sidebar-backdrop {
  position: fixed;
  inset: 0;
  pointer-events: none;
  background-color: rgba(0, 0, 0, 0);
  transition: background-color 0.2s ease-in-out;
  z-index: 8;
}

.sidebar-backdrop.open {
  pointer-events: all;
  background-color: rgba(0, 0, 0, 0.5);
}

.sidebar.open {
  width: 300px;
  pointer-events: all;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  grid-gap: 1.5rem;
}

main {
  margin-top: 64px;
}