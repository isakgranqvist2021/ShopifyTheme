<div class="relative {{ section.settings.background }}" style="min-height: 50vh">
  <div class="isolate px-6 lg:px-8">
    <div class="absolute top-0 left-0 right-0 bottom-0 bg-cover bg-center" style="z-index: 5; background-image: url({{ section.settings.image | img_url: '1200x1200' }})"></div>
    <div
      id="backdrop"
      class="absolute top-0 left-0 right-0 bottom-0"
      style="z-index: 6; background-color: rgba(0, 0, 0, {{ section.settings.opacity }}%)"></div>

    <div class="flex items-center justify-center text-center mx-auto max-w-2xl py-32 sm:py-48 lg:py-56 absolute top-0 left-0 right-0 bottom-0" style="z-index: 7">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
          {{ section.settings.title }}
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600">
          {{ section.settings.subtitle }}
        </p>
        <div class="mt-6 flex items-center justify-center gap-x-6">
          <a href="/collections/all" class="btn btn-primary">
            Products
          </a>
          <a href="/collections" class="btn btn-neutral">
            Collections
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Hero section",
    "templates": [
      "index", "page", "product"
    ],
    "settings": [

      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Welcome to our store"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Shop our latest collections and products."
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background image"
      },
      {
        "type": "range",
        "id": "opacity",
        "label": "Background opacity",
        "default": 50,
        "min": 0,
        "max": 100,
        "step": 1
      }, {
        "type": "select",
        "id": "background",
        "label": "Background",
        "default": "bg-base-100",
        "options": [
          {
            "label": "Background 1",
            "value": "bg-base-100"
          }, {
            "label": "Background 2",
            "value": "bg-base-200"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero section",
        "category": "Hero",
        "settings": {
          "title": "Welcome to our store",
          "subtitle": "Shop our latest collections and products."
        }
      }
    ]
  }
{% endschema %}