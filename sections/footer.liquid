<footer class="footer p-10 {{ section.settings.background }}">
  <div>
    <img
      class="w-32 h-16 object-cover"
      src="{{ section.settings.logo | img_url: '200x200' }}"
      alt="{{ section.settings.title }} logo" />

    <p class="max-w-prose">{{ section.settings.title }}<br/>{{ section.settings.subtitle }}</p>

    <ul class="flex gap-2 flex-wrap" role="list">
      {% for type in shop.enabled_payment_types %}
        <li role="listitem">
          {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
        </li>
      {% endfor %}
    </ul>
  </div>

  <div>
    <span class="footer-title">Services</span>
    <a class="link link-hover">Branding</a>
    <a class="link link-hover">Design</a>
    <a class="link link-hover">Marketing</a>
    <a class="link link-hover">Advertisement</a>
  </div>
  <div>
    <span class="footer-title">Company</span>
    <a class="link link-hover">About us</a>
    <a class="link link-hover">Contact</a>
    <a class="link link-hover">Jobs</a>
    <a class="link link-hover">Press kit</a>
  </div>
  <div>
    <span class="footer-title">Legal</span>
    <a class="link link-hover">Terms of use</a>
    <a class="link link-hover">Privacy policy</a>
    <a class="link link-hover">Cookie policy</a>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "templates": [
      "index", "page", "product", "list-collections"
    ],
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Company name"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Company slogan"
      }, {
        "type": "select",
        "id": "background",
        "label": "Background",
        "default": "bg-base-100",
        "options": [
          {
            "label": "Background 1",
            "value": "bg-base-100"
          }, {
            "label": "Background 2",
            "value": "bg-base-200"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Footer",
        "category": "Footer"
      }
    ]
  }
{% endschema %}